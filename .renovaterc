{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:weekends",
    ":semanticCommits",
    "docker:pinDigests"
  ],
  "ignoreUnstable": true,
  "minimumReleaseAge": "7 days",
  "vulnerabilityAlerts": {
    "labels": [
      "security"
    ],
    "schedule": "at any time"
  },
  "baseBranches": [
    "main"
  ],
  "packageRules": [
    {
      "groupName": "non-major dependencies",
      "groupSlug": "non-major-dependencies",
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "labels": [
        "dependencies"
      ]
    },
    {
      "groupName": "major dependencies",
      "groupSlug": "major-dependencies",
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "dependencies",
        "breaking"
      ]
    }
  ]
}
